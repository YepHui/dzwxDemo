<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNicknameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/t_unl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/t_nickname_layout"
            android:textSize="25sp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_unl_nickname"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/t_unl_title"
        android:layout_marginHorizontal="40dp"
        android:singleLine="true"
        android:text="小虎2"></EditText>

    <Button
        android:id="@+id/btn_unl_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_unl_nickname"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_radius_border"
        android:text="保存"
        android:textColor="@color/white"></Button>
</RelativeLayout>