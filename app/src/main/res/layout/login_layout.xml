<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/t_l_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/t_login_layout"
            android:textSize="25sp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_dzwx_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_l_title"
        android:src="@drawable/dzwx_logo"></ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dzwx_logo"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/et_l_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:singleLine="true"></EditText>

        <EditText
            android:id="@+id/et_l_pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_l_phone"
            android:hint="密码"
            android:singleLine="true"></EditText>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_l_pwd"
            android:layout_marginTop="25dp"
            android:text="登录"
            android:textColor="@color/light_grey"></Button>

        <Button
            android:id="@+id/btn_l_back"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:text="取消"></Button>
    </RelativeLayout>
</RelativeLayout>