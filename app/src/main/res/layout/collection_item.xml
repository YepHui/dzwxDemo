<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/collection_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/weixin_logo"></de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/collection_image"
        android:background="@drawable/list_item_border">

        <TextView
            android:id="@+id/collection_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="第一hhhhhhhhhhhhhhhhhhhhhhhh节"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_baseline_play_arrow_24"></ImageButton>

    </RelativeLayout>


</RelativeLayout>