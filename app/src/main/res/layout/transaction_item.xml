<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="28dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/red_radius_border">

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="已付款"
            android:textColor="@color/text_red"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/transaction_time"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/transaction_status"
            android:gravity="center_vertical"
            android:text="2021-08-01 11:20"
            android:textColor="@color/text_red"
            android:textFontWeight="500"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/transaction_name"
            android:layout_width="256dp"
            android:layout_height="20dp"
            android:layout_below="@id/transaction_status"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:text="消防设置操作培训"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/transaction_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/transaction_name"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:text="订单编号："
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/transaction_id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/transaction_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/transaction_tv_id"
            android:text="1122334455667788"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/transaction_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@id/transaction_tv_id"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/transaction_price"
            android:text="实付款"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/transaction_price"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_below="@id/transaction_tv_id"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="22dp"
            android:gravity="center_vertical|left"
            android:text="￥1900.00"
            android:textColor="@color/text_red"
            android:textFontWeight="500"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
