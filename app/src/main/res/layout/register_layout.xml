<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/t_r_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/t_register_layout"
            android:textSize="25sp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/t_r_title"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/full_radius_border">

            <ImageView
                android:id="@+id/register_form_img_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/phone_blue"></ImageView>

            <EditText
                android:id="@+id/register_form_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@id/register_form_img_clean"
                android:layout_toRightOf="@id/register_form_img_phone"
                android:background="@color/white"
                android:hint="输入手机号"
                android:textSize="14sp"></EditText>

            <ImageView
                android:id="@+id/register_form_img_clean"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/x"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <RelativeLayout

                android:id="@+id/register_form_layout_captcha"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:background="@drawable/full_radius_border">

                <ImageView
                    android:id="@+id/register_form_img_captcha"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/captcha_blue"></ImageView>

                <EditText
                    android:id="@+id/register_form_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/register_form_img_captcha"
                    android:background="@color/white"
                    android:hint="输入验证码"
                    android:textSize="14sp"></EditText>

            </RelativeLayout>

            <Button
                android:id="@+id/register_form_btn_captcha"
                android:layout_width="101dp"
                android:layout_height="41dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/register_form_layout_captcha"
                android:background="@drawable/button_radius_border"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="14sp"></Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/full_radius_border">

            <ImageView
                android:id="@+id/register_form_img_lock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/lock_blue"></ImageView>

            <EditText
                android:id="@+id/register_form_pwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@id/register_form_img_visible"
                android:layout_toRightOf="@id/register_form_img_lock"
                android:background="@color/white"
                android:hint="输入密码"
                android:textSize="14sp"></EditText>

            <ImageView
                android:id="@+id/register_form_img_visible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/invisible_grey"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/full_radius_border">

            <ImageView
                android:id="@+id/register_form_img_relock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/lock_blue"></ImageView>

            <EditText
                android:id="@+id/register_form_repwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@id/register_form_img_revisible"
                android:layout_toRightOf="@id/register_form_img_relock"
                android:background="@color/white"
                android:hint="再次输入密码"
                android:textSize="14sp"></EditText>

            <ImageView
                android:id="@+id/register_form_img_revisible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/visible_grey"></ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"></TextView>

        <Button
            android:id="@+id/register_form_submit"
            android:layout_width="288dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_radius_border"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="14sp"></Button>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/register_bottom"></ImageView>
        </RelativeLayout>

    </LinearLayout>
