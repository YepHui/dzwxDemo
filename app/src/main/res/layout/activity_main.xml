<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_dzwx_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dzwx_logo"></ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_dzwx_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="309dp">

        <ImageButton
            android:id="@+id/image_button_weixin_login"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:background="@drawable/weixin_logo"></ImageButton>

        <ImageButton
            android:id="@+id/image_button_phone_login"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:layout_toRightOf="@id/image_button_weixin_login"
            android:background="@drawable/phone_logo"></ImageButton>
    </RelativeLayout>

</RelativeLayout>